@model LibraryManagement.Models.Book

@{
    ViewData["Title"] = "Book Detail";
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="~/@Model.Avatar" alt="@Model.Title" class="img-fluid shadow-lg">
        </div>

        <div class="col-md-8">
            <div class="d-flex align-items-center mb-3">
                <h2 class="mx-3">@Model.Title</h2>
                <span class="badge bg-warning text-dark">★ 5.0</span> 
            </div>

            <div class="d-flex align-items-center mb-3">
                <div class="ms-3">
                    <p class="mb-0"><strong>Category:</strong> @Model.Category?.Name</p>
                    <p class="mb-0"><strong>Author:</strong> @Model.Author?.FirstName @Model.Author?.LastName</p>
                    <p class="mb-0"><strong>Publisher:</strong> @Model.Publisher</p>
                    <p class="mb-0"><strong>Published Year:</strong> @Model.PublishedYear.Year</p>
                </div>
            </div>

            <div class="ms-3">
                <p class="text-muted">@Model.Description</p>

                <div class="d-flex align-items-center">
                    <h3 class="text-danger me-3">Price Here</h3> 
                    <span class="text-muted text-decoration-line-through">Old Price Here</span> 
                </div>

                <div class="d-flex align-items-center mt-3">
                    <input type="number" class="form-control w-25 me-2" value="1" min="1">
                    <button class="btn btn-warning text-white">
                        <i class="fas fa-shopping-cart"></i> Add To Cart
                    </button>
                </div>

                <div class="mt-4">
                    <a href="#" class="btn btn-outline-primary"><i class="fab fa-facebook"></i></a>
                    <a href="#" class="btn btn-outline-info"><i class="fab fa-twitter"></i></a>
                    <a href="#" class="btn btn-outline-success"><i class="fab fa-whatsapp"></i></a>
                    <a href="#" class="btn btn-outline-danger"><i class="fas fa-envelope"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
